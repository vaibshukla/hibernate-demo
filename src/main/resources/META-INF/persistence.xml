<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="jpaBaseConfiguration">
        <description>
            Persistence Unit Configuration
        </description>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3307/demo"/>
            <property name="javax.persistence.jdbc.user" value="vaibhav"/>
            <property name="javax.persistence.jdbc.password" value="vaibhavs"/>


            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hb2ddl.auto" value="create"/>
        </properties>
    </persistence-unit>
</persistence>